<!DOCTYPE html>
<html>
  <head>
    <title>EJS Template</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-md">
      <h1 class="mt-5">Lista de Productos</h1>
      <a class="btn btn-primary mb-4 mt-3" href="/" role="button">Agregar un producto</a>
      <div class="row row-cols-1 row-cols-md-3 g-2 mt-3">
        <% if (listExists) { %> <% products.forEach( product=> { %>
        <div class="container">
          <div class="card mb-3">
            <img
              src="<%=product.thumbnail%>"
              class="card-img-top w-25 mx-auto my-3 mx-3"
              alt="<%=product.title%>"
            />
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0"><%=product.title%></h5>
                <h5 class="text-dark mb-0">$<%=product.price%></h6>
              </div>
            </div>
          </div>
        </div>
        <% }) %> <% } else {%>
        <h2>No Hay productos</h2>
        <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
